<mvc:View
    xmlns:l="sap.ui.layout"
    controllerName="materialcreation.controller.MaterialCreationView"
    xmlns:mvc="sap.ui.core.mvc"
    displayBlock="true"
    xmlns="sap.m"
    xmlns:f="sap.ui.layout.form"
    xmlns:core="sap.ui.core"
>
    <Page
        id="_IDGenPage"
        title="Create Material"
        titleAlignment="Center"
    >
        <content>
            <VBox
                id="_IDGenVBox"
                class="sapUiSmallMargin"
            >
                <f:SimpleForm
                    id="_IDGenSimpleForm"
                    editable="true"
                    layout="ResponsiveGridLayout"
                    title="General Data "
                    labelSpanXL="4"
                    labelSpanL="4"
                    labelSpanM="12"
                    labelSpanS="12"
                    adjustLabelSpan="false"
                    emptySpanXL="0"
                    emptySpanL="0"
                    emptySpanM="0"
                    emptySpanS="0"
                    columnsXL="2"
                    columnsL="2"
                    columnsM="1"
                    singleContainerFullSize="false"
                >
                    <f:content>
                        <core:Title
                            id="_IDGenTitle"
                            text="General Data"
                        />
                        <Label
                            id="_IDGenLabel"
                            text="Material"
                        />
                        <Input
                            id="_IDGenInput"
                            value="{SupplierName}"
                        />
                        <Label
                            id="_IDGenLabel1"
                            text="Material Description"
                        />
                        <Input
                            id="_IDGenInput1"
                            value="{SupplierName}"
                        />
                        <Label
                            id="_IDGenLabel2"
                            text="Industry Sector"
                        />
                       <ComboBox
                            id="_IDGenComboBox3"
                            selectedKey="{CreationDataModel>/IndusSecKey}"
                            value="{CreationDataModel>/IndusSecValue}"
                            required="true"
                            selectionChange="onIndustryChange"
                            showSecondaryValues="true"
                            filterSecondaryValues="true"
                            items="{ path: '/IndustrySectorF4'}"
                        >
                            <core:ListItem
                                id="_IDGenListItem3"
                                key="{IndustrySectorKey}"
                                text="{IndustrySectorKey}"
                                additionalText="{IndustrySectorDescrption}"
                            />
                        </ComboBox>
                        <Label
                            id="_IDGenLabel3"
                            text="Material Type"
                        />
                        <Input
                            id="_IDGenInput3"
                            value="{ZIPCode}"
                        />
                        <Label
                            id="_IDGenLabel4"
                            text="Selection View"
                        />
                        <Select
                            id="country"
                            selectedKey="Basic Data"
                        >
                            <items>
                                <core:Item
                                    id="_IDGenItem"
                                    text="Basic Data 1"
                                    key="1"
                                />
                                <core:Item
                                    id="_IDGenItem1"
                                    text="Basic Data 2"
                                    key="2"
                                />
                                <core:Item
                                    id="_IDGenItem2"
                                    text="Classification"
                                    key="3"
                                />
                                <core:Item
                                    id="_IDGenItem3"
                                    text="MRP 1"
                                    key="4"
                                />
                                <core:Item
                                    id="_IDGenItem4"
                                    text="MRP 2"
                                    key="5"
                                />
                            </items>
                        </Select>
                        <core:Title
                            id="_IDGenTitle1"
                            text="Organization Level"
                        />
                        <Label
                            id="_IDGenLabel5"
                            text="Plant"
                            required="true"
                        />

                        <ComboBox
                            id="_IDGenComboBox1"
                            selectedKey="{CreationDataModel>/PlantKey}"
                            value="{CreationDataModel>/PlantValue}"
                            required="true"
                            selectionChange="onPlantChange"
                            showSecondaryValues="true"
                            filterSecondaryValues="true"
                            change="selecteeoCategory"
                            items="{ path: '/PlantF4'}"
                        >
                            <core:ListItem
                                id="_IDGenListItem"
                                key="{PlantKey}"
                                text="{PlantKey}"
                                additionalText="{PlantDescription}"
                            />
                        </ComboBox>
                        <Label
                            id="_IDGenLabel6"
                            text="Storage Location"
                            required="true"
                        />
                        <ComboBox
                            id="_IDGenComboBox"
                            selectedKey="{CreationDataModel>/StorLocKey}"
                            value="{CreationDataModel>/StorLocValue}"
                            required="true"
                            selectionChange="onStorageLocChange"
                            showSecondaryValues="true"
                            filterSecondaryValues="true"
                            items="{ path: '/StorageLocationF4'}"
                        >
                            <core:ListItem
                                id="_IDGenListItem1"
                                key="{StorageLocKey}"
                                text="{StorageLocKey}"
                                additionalText="{StorageLocDescription}"
                            />
                        </ComboBox>
                    </f:content>
                </f:SimpleForm>
            </VBox>
            <VBox
                id="_IDGenVBox1"
                class="sapUiSmallMargin"
            >
                <f:SimpleForm
                    id="_IDGenSimpleForm1"
                    editable="true"
                    layout="ResponsiveGridLayout"
                    title="Purchasing Value"
                    labelSpanXL="4"
                    labelSpanL="4"
                    labelSpanM="12"
                    labelSpanS="12"
                    adjustLabelSpan="false"
                    emptySpanXL="0"
                    emptySpanL="0"
                    emptySpanM="0"
                    emptySpanS="0"
                    columnsXL="2"
                    columnsL="2"
                    columnsM="1"
                    singleContainerFullSize="false"
                >
                    <f:content>
                        <core:Title
                            id="_IDGenTitle2"
                            text="General Data"
                        />
                        <Label
                            id="_IDGenLabel7"
                            text="Base Unit of Measure"
                            required="true"
                        />
                        <Input
                            id="uom"
                            value="{SupplierName}"
                        />
                        <Label
                            id="_IDGenLabel8"
                            text="Material Group"
                            required="true"
                        />
                        <ComboBox
                            id="_IDGenComboBox2"
                            selectedKey="{CreationDataModel>/MatGroupKey}"
                            value="{CreationDataModel>/MatGroupValue}"
                            required="true"
                            selectionChange="onMaterialGroupChange"
                            showSecondaryValues="true"
                            filterSecondaryValues="true"
                            items="{ path: '/MaterialGroupF4'}"
                        >
                            <core:ListItem
                                id="_IDGenListItem2"
                                key="{MaterialGroupKey}"
                                text="{MaterialGroupKey}"
                                additionalText="{MaterialGroupDescription}"
                            />
                        </ComboBox>
                        <core:Title
                            id="_IDGenTitle3"
                            text="Purchasing Value"
                        />
                        <Label
                            id="_IDGenLabel9"
                            text="Purchsing value key"
                            required="true"
                        />
                        <StepInput
                            id="_IDGenStepInput"
                            value="{SupplierName}"
                        />
                        <Label
                            id="_IDGenLabel10"
                            text="Material Group"
                            required="true"
                        />
                        <ComboBox
                            id="_IDGenComboBox4"
                            value="{Street}"
                        />
                        <core:Title
                            id="_IDGenTitle4"
                            text="Availablity Check"
                        />
                        <Label
                            id="_IDGenLabel11"
                            text="Availablity Check"
                            required="true"
                        />
                        <ComboBox
                            id="_IDGenComboBox5"
                            value="{SupplierName}"
                        />
                    </f:content>
                </f:SimpleForm>
            </VBox>
            <VBox
                id="_IDGenVBox2"
                class="sapUiSmallMargin"
            >
                <f:SimpleForm
                    id="_IDGenSimpleForm2"
                    editable="true"
                    layout="ResponsiveGridLayout"
                    labelSpanXL="4"
                    labelSpanL="4"
                    labelSpanM="12"
                    labelSpanS="12"
                    adjustLabelSpan="false"
                    emptySpanXL="0"
                    emptySpanL="0"
                    emptySpanM="0"
                    emptySpanS="0"
                    columnsXL="2"
                    columnsL="2"
                    columnsM="1"
                    singleContainerFullSize="false"
                >
                    <f:content>
                        <core:Title
                            id="_IDGenTitle5"
                            text="MRP Procedure"
                        />
                        <Label
                            id="_IDGenLabel12"
                            text="MRP Type"
                            required="true"
                        />
                        <ComboBox
                            id="_IDGenComboBox6"
                            value="{SupplierName}"
                        />
                    </f:content>
                </f:SimpleForm>
            </VBox>
        </content>
        <footer>
            <Bar id="_IDGenBar">
                <contentLeft>
                    <Button
                        id="_IDGenButton"
                        icon="sap-icon://activities"
                        iconFirst="true"
                        text="Material List"
                        visible="true"
                        press="onMaterialListDetails"
                        type="Emphasized"
                    />
                </contentLeft>
                <contentRight>
                    <Button
                        id="_IDGenButton1"
                        text="Reset"
                        icon="sap-icon://reset"
                        type="Reject"
                        press="onCancel"
                    />
                    <Button
                        id="_IDGenButton2"
                        icon="sap-icon://save"
                        text="Save"
                        press="onSave"
                        type="Accept"
                    />
                </contentRight>
            </Bar>
        </footer>
    </Page>
</mvc:View>
